<div class="row">
 <div class="col-md-12">
    <h2>{{employee.employee.firstName}} {{ employee.employee.lastName}} - Employee: {{ employee.employee.employeeNum}}</h2>
    <hr />
        <form method="post" action="/employee/update">
            <input type="hidden" name="employeeNum" value= {{employee.employee.employeeNum}}>
            <fieldset>
                <legend> Personal Information </legend>
                <div class = "row">
                    <div class="col-md-6">
                        <div class = "form-group">
                            <label for="firstName"> First Name: </label>
                            <input class="form-control" id="firstName" name="firstName" 
                                   type="text" value="{{employee.employee.firstName}}">
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div clas="form-group">
                            <label for="lastName"> Last Name: </label>
                            <input class="form-control" id="lastName" name="lastName"
                                    type="text" value="{{employee.employee.lastName}}">
                        </div>
                    </div>
                </div> 
                <div class = "row">
                    <div class="col-md-6">
                        <div class="form-group">
                           <label for="email"> Email: </label>
                           <input class="form-control" id="email" name="email"
                                    type = "email" value = "{{employee.employee.email}}">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for ="SSN"> Social Security Number: </label>
                            <input class="form-control" id="SSN" name="SSN"
                                    type="text" value = "{{employee.employee.SSN}}" readonly>
                        </div>
                    </div>
                </div>
                <div class = "row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet"> Address (Street): </label>
                            <input class="form-control" id="addressStreet" name="addressStreet"
                                    type="text" value="{{employee.employee.addressStreet}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressCity"> Address (City): </label>
                            <label for="addressCity">Address (City):</label>
                                <input class="form-control" id="addressCity" name="addressCity" 
                                type="text" value="{{employee.employee.addressCity}}" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState"> Address (State): </label>
                            <input class="form-control" id="addressState" name="addressState"
                                    type="text" value="{{employee.employee.addressState}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal"> Address (Zip Code): </label>
                            <input class="form-control" id="addressPostal" name="addressPostal"
                                    type="text" value="{{employee.employee.addressPostal}}">
                        </div>
                    </div>
                </div>
            </fieldset>
        
            <fieldset>
                <legend> Company Information </legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager"> Manager: </label>
                            <input class="form-control" id="isManager" name="isManager"
                                    type="checkbox"  {{#if employee.employee.isManager}}checked{{/if}} >
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum"> Employee's Manager Number: </label>
                            <input class="for-control" id="employeeManagerNum" name="employeeManagerNum"
                                    type="text" value = "{{employee.employee.employeeManagerNum}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br>
                            <input class="checkbox-inline" id="fullTime" name="status"
                                    type="radio" value = "Full Time"
                                    {{#equals "Full Time" employee.employee.status}}checked{{/equals}}>
                            <label for="fullTime"> Full Time </label> &nbsp;
                            <input class="checkbox-inline" id="partTime" name="status"
                                    type="radio" value = "Part Time"
                                    {{#equals "Part Time" employee.employee.status}}checked{{/equals}}>
                            <label for="partTime"> Part Time </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department"> Department: </label>
                            {{#if employee.departments}}
                            <select class="form-control" name="department" id="department">
                            {{#each employee.departments}}
                            <option value="{{departmentId}}" {{#if selected}} selected {{/if}} >{{departmentName}} </option>
                            {{/each}}
                            </select>
                            {{else}}
                            <div>No Departments</div>
                            {{/if}}
                        </div>
                    </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label> Hire Date: </label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" 
                                    value = "{{employee.hireDate}}" readonly>
                        </div>
                    </div>
                </div>

                </div>
            </fieldset>
            <input type="submit" class="btn btn-primary pull-right" value = "Update Employee"/>
            <br> <br>
        </form>
  </div>
</div>